# Laravel - A PHP Framework For Web Artisans
<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Redirect to public folder only if not already in public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{SCRIPT_FILENAME} !-d
    RewriteCond %{SCRIPT_FILENAME} !-f
    RewriteRule ^(.*)$ /public/$1 [L]
</IfModule>

# Protect sensitive files
<Files ".env">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

# Protect sensitive directories
<IfModule mod_rewrite.c>
    RewriteRule ^vendor/.*$ - [F,L,NC]
    RewriteRule ^storage/.*$ - [F,L,NC]
    RewriteRule ^bootstrap/.*$ - [F,L,NC]
    RewriteRule ^database/.*$ - [F,L,NC]
    RewriteRule ^config/.*$ - [F,L,NC]
    RewriteRule ^resources/.*$ - [F,L,NC]
    RewriteRule ^routes/.*$ - [F,L,NC]
    RewriteRule ^tests/.*$ - [F,L,NC]
</IfModule>